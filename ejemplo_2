import java.util.Arrays;
	import java.util.InputMismatchException;
	import java.util.Scanner;
public class ejemplo_2 {
	

	 
		public static void main(String[] args) {
			Scanner sc = new Scanner(System.in);
			int[]array= new int[10];
			
			try{
				for(int i =0; i<array.length;i++){
					System.out.println("ingrese el valor a asignar al arreglo ("+(i+1)+"):");
					array[i] = sc.nextInt();
					
					}
				System.out.println("Introdujo los siguientes valores: ");
				System.out.println(Arrays.toString(array));
			}catch(InputMismatchException no_num){
				System.out.println("Introducido un valor no numerico sin ningun  valor");
				
			}finally{
				System.out.println("Finalizacion completa :)");
			}

		}
		}
	

