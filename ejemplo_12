import java.util.InputMismatchException;
import java.util.Scanner;
public class ejemplo_12 {
	
			public static void main(String[] args) {
				Scanner sc = new Scanner(System.in);
				int num1,num2,multiplicacion;
				String error = "sin valor";
				try{
					System.out.println("ingrese un numero entero");
					num1 = sc.nextInt();
					System.out.println("ingrese otro numero entero");
					num2 = sc.nextInt();
					multiplicacion=num1*num2;
					System.out.println("la suma de los numeros es: "+multiplicacion);
					
				}catch(InputMismatchException no_num){
					System.out.println("usted introdujo un valor no entero");
					System.out.println("la multiplicacion es: "+error);
				}
			}

		}

